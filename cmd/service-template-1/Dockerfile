# ---------- Build stage ----------
FROM golang:1.25-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./...

# ---------- Run stage ----------
FROM alpine:3.20

RUN adduser -D appuser

WORKDIR /app

COPY --from=builder /app/server .

EXPOSE 8080

USER appuser

CMD ["./server"]
